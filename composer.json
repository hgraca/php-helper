{
    "name": "hgraca/helper",
    "description": "A generic PHP lib with static classes full of handy functional methods.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Herberto Graca",
            "email": "herberto.graca@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hgraca\\Helper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hgraca\\Helper\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpunit/phpunit": "~5",
        "phpunit/php-code-coverage": "~3"
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
